{
	"name": "nextjs-app",
	"version": "0.1.0",
	"private": true,
	"description": "A modern Next.js application with responsive top navigation",
	"keywords": [
		"nextjs",
		"react",
		"typescript",
		"tailwindcss",
		"navigation"
	],
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "node -r dotenv/config node_modules/.bin/next start",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"type-check": "tsc --noEmit",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"clean": "rm -rf .next out",
		"preview": "next build && next start",
		"pm2:start": "pm2 start ecosystem.config.js",
		"pm2:stop": "pm2 stop euem-portfolio",
		"pm2:restart": "pm2 restart euem-portfolio",
		"pm2:delete": "pm2 delete euem-portfolio",
		"prod:build": "npm run clean && npm run build && pm2 start ecosystem.config.js"
	},
	"dependencies": {
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.0.0",
		"dotenv": "^17.2.3",
		"lucide-react": "^0.294.0",
		"next": "^14.2.33",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-markdown": "^10.1.0",
		"tailwind-merge": "^2.0.0"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.10",
		"@types/node": "^20.10.0",
		"@types/react": "^18.2.42",
		"@types/react-dom": "^18.2.17",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.55.0",
		"eslint-config-next": "14.0.4",
		"postcss": "^8.4.32",
		"prettier": "^3.1.0",
		"prettier-plugin-tailwindcss": "^0.5.7",
		"tailwindcss": "^3.3.6",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
